{{ 'section-clients-list.css' | asset_url | stylesheet_tag }}

<div class="clients-list">
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title {{ section.settings.heading_size }}">
          {{ section.settings.title | escape }}
        </h2>
      </div>
      <div class="clients-wrapper grid grid--3-col-desktop grid--2-col-tablet-down">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'client' %}
                <div class="client grid__item" {{ block.shopify_attributes }}>
                    <div class="client-image-wrap">
                      <a href="{{ block.settings.link }}">
                        {% if block.settings.svg_link != blank %}
                          <img src="{{ block.settings.svg_link }}" alt="Uno furniture client logo">
                        {% else %}
                          {{ block.settings.image | image_url: width: 800 | image_tag }}
                        {% endif %}
                      </a>
                    </div>
                    <h3><a href="{{ block.settings.link }}" class="full-unstyled-link">{{ block.settings.client_name }}</a></h3>
                </div>
            {% endcase %}
        {% endfor %}        
      </div>
    {%- endunless -%}
  </div>
</div>

{% schema %}
{
  "name": "Clients List",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Our Customers",
      "label": "Clients list title"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    }
  ],
  "blocks": [
    {
      "type": "client",
      "name": "Client",
      "settings": [
        {
          "type": "paragraph",
          "content": "Upload client SVG to Files in Shopify settings or use PNG."
        },        
        {
          "type": "url",
          "id": "svg_link",
          "label": "Client SVG file URL"
        },     
        {
          "type": "image_picker",
          "id": "image",
          "label": "Alternative PNG client image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Client URL"
        },
        {
          "type": "text",
          "id": "client_name",
          "label": "Client name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Clients List",
      "blocks": [
        {
          "type": "client"
        }
      ]
    }
  ]
}
{% endschema %}
